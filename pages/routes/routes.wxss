/* Columns within game route list item */
.detail-game-route-difficulty {
  flex: 1;
  text-align: center;
  font-weight: 500;
}
.detail-game-route-status {
  flex: 1;
  text-align: center;
}
.detail-game-route-status.success { color: #16a34a; } /* Green for success */
