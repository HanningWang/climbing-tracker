/* pages/routes/routes.wxss */
.routes-container {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #fff;
}

.header {
  display: flex;
  flex-direction: column;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 400;
  margin-bottom: 10rpx;
  padding-left: 10rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #666;
  padding-left: 10rpx;
}

.tab-container {
  display: flex;
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #22C55E;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 25%;
  width: 50%;
  height: 4rpx;
  background-color: #22C55E;
  border-radius: 2rpx;
}

.form-container {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.form-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.input, .picker {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.picker-content {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.arrow {
  font-size: 24rpx;
  color: #999;
}

.calendar-icon {
  color: #999;
}

.add-btn {
  background-color: rgba(34, 197, 94, 1);
  color: white;
  border: none;
  border-radius: 8rpx;
  height: 72rpx;
  font-size: 32rpx;
  text-align: center;
  margin-bottom: 30rpx;
}

.route-list {
  margin: 20rpx 0 30rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  overflow: hidden;
}

.list-header {
  display: flex;
  background-color: #f5f5f5;
  font-size: 28rpx;
  font-weight: 500;
  padding: 20rpx 0;
}

.list-item {
  display: flex;
  padding: 20rpx 0;
  border-top: 1rpx solid #e0e0e0;
}

.list-col {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.quantity-control {
  display: flex;
  flex-direction: row;
  gap: 8rpx;
  justify-content: center;
}

.quantity-btn {
  color: #4CAF50;
}

.delete-icon {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  padding: 8rpx;
}

.button-group {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.save-btn, .clear-btn {
  flex: 1;
  height: 72rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  text-align: center;
}

.save-btn {
  background-color: rgba(34, 197, 94, 1);
  color: white;
  border: none;
}

.clear-btn {
  background-color: #f5f5f5;
  color: #666;
  border: 1rpx solid #e0e0e0;
}

.game-container {
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
}

.game-title {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 30rpx;
  text-align: center;
}

.game-start-btn {
  background-color: #22C55E;
  color: white;
  border: none;
  border-radius: 8rpx;
  height: 80rpx;
  font-size: 32rpx;
  text-align: center;
  margin-top: 40rpx;
  min-width: 95%;
}

.game-running-container {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.game-header {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  padding: 30rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.game-info {
  display: flex;
  justify-content: space-between;
}

.game-location {
  font-size: 32rpx;
  font-weight: 500;
}

.game-type {
  font-size: 28rpx;
  color: #666;
}

.game-timer {
  display: flex;
  flex-direction: row;
  justify-content: center;
  gap: 10rpx;
  font-size: 60rpx;
  font-weight: 500;
  text-align: center;
  margin: 10rpx 0;
}

.game-timer image {
  width: 76rpx;
  height: 76rpx;
}

.game-attempts {
  font-size: 36rpx;
  color: #333;
  text-align: center;
  margin: 10rpx 0;
}

.game-attempts-number {
  color: #22C55E;
  font-weight: bold;
}

.game-location-info {
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

.difficulty-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.difficulty-grid-bouldering, .difficulty-grid-sport {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  justify-content: center;
}

.difficulty-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 15rpx;
}

.difficulty-btn {
  width: 120rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #e6f0ff; /* 蓝色背景 */
  color: #3366cc; /* 蓝色文字 */
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.difficulty-btn:active {
  background-color: #3366cc;
  color: white;
}

.difficulty-fail-btn {
  width: 120rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ffebee; /* 浅红色背景 */
  color: #e53935; /* 红色文字 */
  border-radius: 8rpx;
}

.difficulty-fail-btn:active {
  background-color: #e53935;
  color: white;
}

.fail-icon {
  font-size: 24rpx;
  font-weight: bold;
}

.game-routes-list {
  margin-top: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  overflow: hidden;
}

.game-routes-header {
  background-color: #f5f5f5;
  padding: 20rpx;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
}

.game-route-header {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 20rpx;
  background-color: #f9f9f9;
  border-top: 1rpx solid #e0e0e0;
  border-bottom: 1rpx solid #e0e0e0;
  font-size: 24rpx;
  font-weight: 500;
  color: #666;
}

.game-route-count-header,
.game-route-time-header,
.game-route-difficulty-header,
.game-route-status-header {
  flex: 1;
  text-align: center;
}

.game-route-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  border-top: 1rpx solid #e0e0e0;
  align-items: center;
}

.game-route-count,
.game-route-time,
.game-route-difficulty,
.game-route-status {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
}

.game-route-count {
  color: #666;
}

.game-route-time {
  color: #666;
}

.game-route-difficulty {
  font-weight: 500;
}

.game-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-top: 30rpx;
}

.game-end-btn {
  background-color: #22C55E;
  color: white;
  border: none;
  border-radius: 8rpx;
  height: 80rpx;
  font-size: 32rpx;
  text-align: center;
}

.game-cancel-btn {
  background-color: #f5f5f5;
  color: #666;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  height: 80rpx;
  font-size: 32rpx;
  text-align: center;
}

.coming-soon {
  display: none;
}

.history-container {
  margin-top: 40rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 36rpx;
  padding: 0 10rpx;
}

.date-filter {
  font-size: 24rpx;
  color: #666;
}

.filter-content {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.filter-icon {
  font-size: 24rpx;
}

.record-card {
  margin-bottom: 20rpx;
  background-color: rgba(239, 246, 255, 0.6);
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.card-header {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-actions {
  display: flex;
  gap: 24rpx;
}

.icon-view, .icon-delete {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
}

.svg-icon {
  padding-right: 8rpx;
  width: 36rpx;
  height: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.card-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.card-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.card-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
  min-width: 140rpx;
  display: flex;
  align-items: center;
}

.label-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 12rpx;
}

.card-value {
  color: #333;
  flex: 1;
  font-size: 28rpx;
}

.routes-summary {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.route-item {
  background-color: #f0f9f0;
  color: #4CAF50;
  border-radius: 20rpx;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
}

.view-btn, .delete-btn {
  display: none;
}

/* 添加地点标题样式 */
.card-location-title {
  font-size: 36rpx;
  font-weight: 400;
  color: #000;
  padding-bottom: 15rpx;
}

/* 添加统计信息样式 */
.game-stats {
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  margin-top: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 5rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
}

.stat-value.success {
  color: #22C55E;
}

.stat-value.fail {
  color: #e53935;
}

/* 修改游戏路线列表样式 */
.game-route-info {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.game-route-status {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  padding: 4rpx 8rpx;
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 48rpx;
}

.game-route-status.success {
  color: #22C55E;
}

.game-route-status.fail {
  color: #e53935;
}

/* 详情卡片弹窗样式 */
.detail-card-overlay {
  position: fixed;
  top: 0rpx;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7); /* Darker overlay */
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
  padding: 32rpx 0; /* Add padding for better spacing on small screens */
}

.detail-card {
  width: 80%; /* Slightly wider */
  max-width: 680rpx; /* Max width */
  background: linear-gradient(to bottom, #f8fafc, #e2e8f0); /* Light gradient background */
  border-radius: 24rpx; /* More rounded corners */
  box-shadow: 0 25rpx 50rpx -12rpx rgba(0, 0, 0, 0.25); /* Softer shadow */
  overflow: hidden;
  position: relative;
  top: 60rpx;
  display: flex;
  flex-direction: column;
  max-height: 80vh; /* Limit height */
}

.detail-card-header {
  height: 240rpx; /* Fixed height for header */
  padding: 40rpx;
  position: relative;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-bottom: none; /* Remove border */
}

/* Specific background gradients for routes/game cards */
.routes-header-bg {
  background: linear-gradient(to bottom, #3b82f6, #2563eb, #1d4ed8); /* Blue gradient */
}

.game-header-bg {
  background: linear-gradient(to bottom, #f59e0b, #d97706, #b45309); /* Amber/Orange gradient */
}

/* Optional: Background image styling (if you add images) */
.mountain-bg { /* Re-use or create new class */
  position: absolute;
  inset: 0;
  opacity: 0.2; /* Adjust opacity */
}
.mountain-bg image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.header-content {
  display: flex;
  flex-direction: column;
  position: relative;
  z-index: 1;
}

.header-subtitle {
  font-size: 24rpx;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 2rpx;
  margin-bottom: 8rpx;
}
.routes-header-bg .header-subtitle { color: #bfdbfe; } /* Light blue */
.game-header-bg .header-subtitle { color: #fed7aa; } /* Light orange */


.detail-card-title { /* Style for the main title (Location) */
  font-size: 48rpx;
  color: white;
  font-weight: bold;
  word-break: break-word;
  padding: 0 10rpx;
}

.achievement-badge {
  width: 60%;
  display: flex;
  height: 66rpx;
  text-align: center;
  align-items: center;
  justify-content: center;
  align-self: center;
  justify-self: center;
  font-weight: bold;
  padding: 16rpx 64rpx;
  border-radius: 999rpx;
  font-size: 32rpx;
  margin-top: -48rpx; /* Overlap header */
  margin-bottom: 32rpx;
  border: 4rpx solid white;
  box-shadow: 0 4rpx 6rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 2;
}
.achievement-badge text { color: white; }

/* Specific badge colors */
.routes-badge { background: #2563eb; } /* Blue */
.game-badge { background: #d97706; } /* Orange */


.detail-card-content {
  padding: 48rpx;
  padding-top: 16rpx; /* Reduced top padding as badge takes space */
  overflow-y: auto; /* Enable scrolling for content */
  flex: 1; /* Allow content to take remaining space */
}

.details-grid {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  display: grid;
  grid-template-columns: repeat(2, 1fr); /* 2 columns */
  gap: 32rpx; /* Increased gap */
}

.detail-item {
  margin-bottom: 0; /* Remove margin from grid items */
  padding-left: 0;
  display: flex;
  flex-direction: column; /* Stack label and value */
}

.detail-item-full {
  grid-column: 1 / -1; /* Span full width */
}

.detail-label {
  font-size: 24rpx;
  color: #64748b; /* Muted label color */
  margin-bottom: 4rpx;
  display: flex;
  align-items: center;
  font-weight: normal; /* Normal weight for label */
}

.label-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 12rpx;
  opacity: 0.8;
}

.detail-value {
  font-size: 28rpx;
  color: #1e293b; /* Darker value color */
  font-weight: 500; /* Medium weight for value */
  word-break: break-word;
}

.detail-card-footer {
  padding: 24rpx;
  text-align: center;
  margin-top: auto; /* Push footer to bottom */
}
.routes-footer-bg { background: #1d4ed8; } /* Dark Blue */
.game-footer-bg { background: #b45309; } /* Dark Orange */

.footer-text {
  font-size: 24rpx;
}
.routes-footer-bg .footer-text { color: #bfdbfe; } /* Light Blue */
.game-footer-bg .footer-text { color: #fed7aa; } /* Light Orange */


/* Optional: Save Button Styling (if added) */
.save-card-btn {
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 16rpx 0;
  font-size: 28rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}
.routes-save-btn { background: #2563eb; }
.game-save-btn { background: #d97706; }

.save-card-btn:active {
  filter: brightness(90%);
}

.save-card-btn image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

/* --- Styling for Route Lists within Detail Card --- */

/* Container for the list */
.detail-routes-list, .detail-game-routes-list {
  margin-top: 10rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  overflow: hidden; /* Clip content */
  background-color: #f8f9fa; /* Light background for list area */
}

/* Header row for the list */
.detail-route-header, .detail-game-route-header {
  display: flex;
  background-color: #e9ecef; /* Slightly darker header */
  padding: 15rpx;
  font-size: 24rpx; /* Smaller header font */
  font-weight: 500;
  color: #495057; /* Header text color */
}

/* Header columns */
.detail-route-type-header,
.detail-route-difficulty-header,
.detail-route-quantity-header,
.detail-game-route-difficulty-header,
.detail-game-route-status-header {
  flex: 1;
  text-align: center;
}
.detail-route-type-header { flex: 1.2; text-align: left; padding-left: 10rpx;} /* Adjust flex/alignment */
