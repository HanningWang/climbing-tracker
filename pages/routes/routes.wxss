/* pages/routes/routes.wxss */
.routes-container {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #fff;
}

.header {
  display: flex;
  flex-direction: column;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 400;
  margin-bottom: 10rpx;
  padding-left: 10rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #666;
  padding-left: 10rpx;
}

.tab-container {
  display: flex;
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #22C55E;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 25%;
  width: 50%;
  height: 4rpx;
  background-color: #22C55E;
  border-radius: 2rpx;
}

.form-container {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.form-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.input, .picker {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.picker-content {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.arrow {
  font-size: 24rpx;
  color: #999;
}

.calendar-icon {
  color: #999;
}

.add-btn {
  background-color: rgba(34, 197, 94, 1);
  color: white;
  border: none;
  border-radius: 8rpx;
  height: 72rpx;
  font-size: 32rpx;
  text-align: center;
  margin-bottom: 30rpx;
}

.route-list {
  margin: 20rpx 0 30rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  overflow: hidden;
}

.list-header {
  display: flex;
  background-color: #f5f5f5;
  font-size: 28rpx;
  font-weight: 500;
  padding: 20rpx 0;
}

.list-item {
  display: flex;
  padding: 20rpx 0;
  border-top: 1rpx solid #e0e0e0;
}

.list-col {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  padding: 8rpx;
}

.button-group {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.save-btn, .clear-btn {
  flex: 1;
  height: 72rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  text-align: center;
}

.save-btn {
  background-color: rgba(34, 197, 94, 1);
  color: white;
  border: none;
}

.clear-btn {
  background-color: #f5f5f5;
  color: #666;
  border: 1rpx solid #e0e0e0;
}

.game-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
}

.coming-soon {
  font-size: 32rpx;
  color: #999;
}

.history-container {
  margin-top: 40rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 36rpx;
  padding: 0 10rpx;
}

.date-filter {
  font-size: 24rpx;
  color: #666;
}

.filter-content {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.filter-icon {
  font-size: 24rpx;
}

.record-card {
  margin-top: 20rpx;
  background-color: rgb(239,246,255, 0.6);
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.card-date {
  font-size: 32rpx;
  font-weight: 500;
}

.card-location {
  font-size: 28rpx;
  color: #666;
}

.card-content {
  margin-bottom: 30rpx;
}

.card-item {
  display: flex;
  margin-bottom: 15rpx;
  align-items: center;
}

.card-label {
  font-size: 28rpx;
  color: #666;
  min-width: 160rpx;
}

.card-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.card-time {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.routes-summary {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.route-item {
  background-color: #f0f9f0;
  color: #4CAF50;
  border-radius: 20rpx;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
}

.card-actions {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.view-btn, .delete-btn {
  flex: 1;
  height: 72rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.view-btn {
  background-color: #f0f9f0;
  color: #4CAF50;
  border: 1rpx solid #4CAF50;
}

.delete-btn {
  background-color: #ff5252;
  color: white;
  border: none;
}

.svg-icon {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-delete {
  padding: 8rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 82, 82, 0.1);
  transition: background-color 0.3s;
}

.icon-delete:active {
  background-color: rgba(255, 82, 82, 0.2);
}

/* 添加地点标题样式 */
.card-location-title {
  font-size: 36rpx;
  font-weight: 400;
  margin-bottom: 20rpx;
  color: #000;
  padding-bottom: 15rpx;
} 