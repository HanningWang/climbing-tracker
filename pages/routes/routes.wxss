.clear-filter-btn {
  margin-top: 20rpx;
  padding: 10rpx 20rpx;
  background-color: #f0f0f0;
  color: #666;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.clear-filter-btn:active {
  background-color: #e0e0e0;
}

/* 修改撤销按钮样式 */
.undo-button {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  gap: 10rpx;
  border-top: 1rpx solid #e0e0e0;
  color: #ffffff; /* 改为白色文字 */
  font-size: 28rpx;
  background-color: #f87578; /* 使用更深的红色背景 */
  transition: background-color 0.2s ease;
}

.undo-button:active {
  background-color: #fa6f6c; /* 点击时稍微变亮 */
}

.undo-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.9; /* 增加图标不透明度，让它在深色背景上更清晰 */
  filter: brightness(0) invert(1); /* 将图标改为白色 */
} 