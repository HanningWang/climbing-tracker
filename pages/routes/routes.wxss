.detail-route-type {
  flex: 1.2; /* Match header flex */
  text-align: left;
  padding-left: 10rpx;
}
.detail-route-difficulty {
  flex: 1;
  text-align: center;
  font-weight: 500;
}
.detail-route-quantity {
  flex: 0.8; /* Match header flex */
  text-align: right;
  padding-right: 10rpx;
  color: #666;
