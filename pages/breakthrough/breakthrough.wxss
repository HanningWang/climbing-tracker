/* 烟花动画样式 */
.fireworks-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 1000;
  overflow: hidden;
  background-color: rgba(0, 0, 0, 0.2); /* 略微暗化背景，让烟花更明显 */
}

.firework {
  position: absolute;
  border-radius: 50%;
  transform: scale(0);
  box-shadow: 0 0 6px 2px rgba(255, 255, 255, 0.6); /* 添加发光效果 */
  animation-name: fireworkExplode;
  animation-timing-function: cubic-bezier(0.1, 0.8, 0.2, 1);
  animation-fill-mode: forwards;
}

.circle {
  border-radius: 50%;
}

.star {
  clip-path: polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%);
}

.heart {
  transform: rotate(45deg);
  position: relative;
}

.heart:before,
.heart:after {
  content: "";
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: inherit;
}

.heart:before {
  left: -50%;
}

.heart:after {
  top: -50%;
  left: 0;
}

.particle {
  position: absolute;
  width: 4px;
  height: 20px;
  opacity: 0;
  transform-origin: 0 0;
  animation-name: shoot;
  animation-timing-function: ease-out;
  animation-fill-mode: forwards;
}

.sparkle {
  position: absolute;
  border-radius: 50%;
  background-color: white;
  box-shadow: 0 0 8px 4px rgba(255, 255, 255, 0.8); /* 更强的发光效果 */
  opacity: 0;
  animation: twinkle 1s ease-in-out infinite;
}

@keyframes fireworkExplode {
  0% {
    transform: scale(0);
    opacity: 0;
  }
  10% {
    transform: scale(0.2);
    opacity: 0.2;
  }
  40% {
    transform: scale(1.2);
    opacity: 1;
  }
  80% {
    transform: scale(0.8);
    opacity: 0.8;
  }
  100% {
    transform: scale(0);
    opacity: 0;
  }
}

@keyframes shoot {
  0% {
    transform: translateY(0) translateX(0) rotate(0);
    opacity: 0;
  }
  10% {
    opacity: 1;
  }
  70% {
    opacity: 1;
  }
  100% {
    transform: translateY(100px) translateX(100px) rotate(0);
    opacity: 0;
  }
}

@keyframes twinkle {
  0% {
    opacity: 0;
    transform: scale(0.5);
  }
  50% {
    opacity: 1;
    transform: scale(1.2);
  }
  100% {
    opacity: 0;
    transform: scale(0.5);
  }
}

