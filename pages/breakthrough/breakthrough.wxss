/* pages/breakthrough/breakthrough.wxss */
.breakthrough-container {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #fff;
}

.header {
  display: flex;
  flex-direction: column;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 400;
  margin-bottom: 10rpx;
  padding-left: 10rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #666;
  padding-left: 10rpx;
}

.form-container {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.input, .picker {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.picker-content {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.arrow {
  font-size: 24rpx;
  color: #999;
}

.calendar-icon {
  color: #999;
}

.textarea {
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.submit-btn {
  background-color: rgba(34, 197, 94, 1);
  color: white;
  border: none;
  border-radius: 8rpx;
  height: 72rpx;
  min-width: 100%;
  font-size: 32rpx;
  text-align: center;
  align-items: center;
  justify-content: center;
}

/* 烟花动画样式 */
.fireworks-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 999;
}

.firework {
  position: absolute;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  bottom: 0;
  animation: explode 1.5s ease-out forwards;
}

@keyframes explode {
  0% {
    transform: translateY(0) scale(1);
    opacity: 1;
  }
  50% {
    opacity: 1;
  }
  100% {
    transform: translateY(-70vh) scale(0);
    opacity: 0;
  }
}

/* 突破记录卡片样式 */
.breakthrough-card {
  margin-top: 20rpx;
  background-color: rgb(239,246,255, 0.6);
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 40rpx;
  flex: 1;
}

.card-actions {
  display: flex;
  gap: 16rpx;
}

.svg-icon {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-view, .icon-delete {
  padding-right: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.card-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
  font-size: 26rpx;
  color: #666;
}

.card-type {
  padding: 4rpx 12rpx;
  background-color: #f0f9f0;
  color: #4CAF50;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.card-date {
  font-size: 26rpx;
  color: #666;
}

.card-location {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.card-experience {
  font-size: 28rpx;
  line-height: 1.5;
  color: #333;
  padding-top: 10rpx;
  border-top: 1rpx solid #f0f0f0;
}

/* 修改卡片内容样式 */
.card-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.card-row {
  display: flex;
  align-items: center;
}

.card-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
  min-width: 80rpx;
}

.card-value {
  font-size: 28rpx;
  color: #333;
}

.card-type-badge {
  padding: 4rpx 12rpx;
  background-color: #f0f9f0;
  color: #4CAF50;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.card-location, .card-experience {
  display: flex;
  margin-top: 8rpx;
}

.card-experience {
  flex-direction: column;
  padding-top: 10rpx;
  border-top: 1rpx solid #f0f0f0;
}

.card-experience .card-label {
  margin-bottom: 8rpx;
}

.card-experience .card-value {
  line-height: 1.5;
  padding-left: 10rpx;
}

/* 突破记录列表样式 */
.breakthrough-list {
  margin-top: 40rpx;
}

.list-header {
  font-size: 36rpx;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

/* 添加必填和选填标记的样式 */
.required {
  color: #ff4d4f;
  font-size: 24rpx;
  margin-left: 8rpx;
}

.optional {
  color: #999;
  font-size: 24rpx;
  margin-left: 8rpx;
  font-weight: normal;
} 