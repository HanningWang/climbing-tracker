          </view>
        </view>
      </view>
      
      <view class="modal-footer">
        <button class="modal-btn" bindtap="closePlanDetail">хЕ│щЧн</button>
      </view>
    </view>
  </view>

  <!-- ц╖╗хКач╝Цш╛Сшонч╗Гщб╣чЫочЪДх╝╣чкЧ -->
