        <view class="form-item">
          <textarea class="textarea paste-textarea" placeholder="цпПшбМш╛УхЕеф╕Аф╕кшонч╗Гщб╣чЫо..." model:value="{{pasteExercisesContent}}" focus="{{true}}" maxlength="5000"></textarea>
