        <text class="footer-text">хЭЪцМБшонч╗Гя╝Мф┐ЭцМБхБех║╖</text>
      </view>
    </view>
  </view>

  <!-- чФиф║ОчФЯцИРхЫ╛чЙЗчЪДщЪРшЧПcanvas -->
  <canvas type="2d" id="trainingCardCanvas" style="width: 600px; height: 800px; position: fixed; left: -2000px; top: -2000px;"></canvas>
</view> 