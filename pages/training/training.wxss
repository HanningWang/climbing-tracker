/* pages/training/training.wxss */
.training-container {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #fff;
}

.header {
  display: flex;
  flex-direction: column;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 400;
  margin-bottom: 10rpx;
  padding-left: 10rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #666;
  padding-left: 10rpx;
}

/* 选项卡样式 */
.tabs {
  display: flex;
  border-bottom: 1rpx solid #e0e0e0;
  margin-bottom: 30rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #22C55E;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 25%;
  width: 50%;
  height: 4rpx;
  background-color: #22C55E;
  border-radius: 2rpx;
}

.tab-content {
  flex: 1;
}

/* 表单样式 */
.form-container {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.form-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 30rpx;
  text-align: center;
}


.label {
  display: block;
  font-size: 28rpx;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.exercise-input-container {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.exercise-input {
  flex: 1;
}

.add-btn, .paste-btn {
  width: 56rpx;
  height: 56rpx;
  background-color: #22C55E;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 40rpx;
  font-weight: bold;
}

.paste-btn image {
  width: 36rpx;
  height: 36rpx;
}

.add-btn image {
  width: 40rpx;
  height: 40rpx;
}

/* 已添加的训练项目列表 */
.exercises-list {
  margin-bottom: 30rpx;
}

.exercise-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 20rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
  font-size: 28rpx;
}

.exercise-actions {
  display: flex;
  align-items: center;
}

.edit-exercise {
  padding: 0 10rpx;
  display: flex;
  align-items: center;
}

.edit-text {
  font-size: 32rpx;
  color: #4CAF50;
  font-weight: bold;
}

.delete-exercise {
  color: #ff4d4f;
  font-size: 32rpx;
  font-weight: bold;
  padding: 0 10rpx;
}

/* 复选框样式 */
.checkbox-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.checkbox-label {
  font-size: 28rpx;
}

.submit-btn {
  background-color: rgba(34, 197, 94, 1);
  color: white;
  border: none;
  border-radius: 8rpx;
  height: 72rpx;
  min-width: 100%;
  font-size: 32rpx;
  text-align: center;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
}

/* 训练计划列表样式 */
.plans-list {
  margin-top: 20rpx;
}

.list-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 36rpx;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.plan-card {
  margin-bottom: 20rpx;
  background-color: rgb(239,246,255, 0.6);
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.card-title {
  font-size: 36rpx;
  font-weight: 500;
}

.card-content {
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  padding: 0 12rpx;
}

.card-row {
  display: flex;
  align-items: center;
}

.card-label {
  font-size: 28rpx;
  color: #666;
  min-width: 140rpx;
}

.card-value {
  font-size: 28rpx;
  color: #333;
}

.action-btn {
  flex: 1;
  text-align: center;
  padding: 15rpx 0;
  border-radius: 8rpx;
  font-size: 28rpx;
  width: 80%;
}

.view-btn {
  background-color: #f0f9f0;
  color: #22C55E;
}

.delete-btn {
  background-color: #fff1f0;
  color: #ff4d4f;
}

.execute-btn {
  background-color: #22C55E;
  color: white;
}

/* 执行训练页面样式 */
.execute-container {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.empty-text {
  text-align: center;
  color: #999;
  margin-top: 100rpx;
  font-size: 28rpx;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 90%;
  background-color: white;
  border-radius: 12rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 500;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
}

.modal-body {
  padding: 30rpx;
  padding-bottom: 10rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.detail-label {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
}

.detail-value {
  font-size: 28rpx;
  color: #333;
}

.detail-exercises {
  margin-top: 10rpx;
}

.detail-exercise {
  padding: 10rpx 0;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-exercise:last-child {
  border-bottom: none;
}

.modal-footer {
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.modal-btn {
  background-color: #22C55E;
  color: white;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 8rpx;
  margin-left: 20rpx;
  min-width: 100%;
}

/* 编辑弹窗的取消按钮样式 */
.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
  margin-right: 20rpx;
}

/* 修改图标样式 */
.icon-image {
  width: 36rpx;
  height: 36rpx;
}

.edit-icon {
  font-size: 32rpx;
  color: #4CAF50;
}

.icon-container {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 40rpx;
}

.edit-text {
  font-size: 32rpx;
  color: #4CAF50;
}

/* 计时器样式 */
.timer-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 30rpx 0;
}

.timer {
  font-size: 60rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  font-family: monospace;
}

.timer-actions {
  display: flex;
  gap: 20rpx;
  width: 95%;
}

.timer-btn {
  padding: 10rpx 30rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  min-width: 160rpx;
}

.start-btn {
  background-color: #22C55E;
  color: white;
}

.pause-btn {
  background-color: #f59e0b;
  color: white;
}

.reset-btn {
  background-color: #f5f5f5;
  color: #666;
}

/* 训练内容样式 */
.training-content {
  margin: 30rpx 0;
}

.content-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  display: block;
}

.exercise-checklist {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.exercise-check-item {
  display: flex;
  align-items: center;
  gap: 15rpx;
  padding: 10rpx 0;
}

.exercise-name {
  font-size: 28rpx;
}

.exercise-name.completed {
  text-decoration: line-through;
  color: #999;
}

/* 文本域样式 */
.textarea {
  width: 100%;
  min-height: 400rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.paste-textarea {
  height: 300rpx;
}

/* 训练记录样式 */
.training-records {
  margin-top: 40rpx;
}

.date-picker {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.date-picker-content {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 24rpx;
  color: #666;
}

.calendar-icon {
  font-size: 28rpx;
}

.search-btn {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  border-radius: 50%;
}

.search-icon {
  font-size: 28rpx;
}


.card-date {
  font-size: 24rpx;
  color: #666;
}

.card-feedback {
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
}

.card-feedback {
  margin-bottom: 5rpx;
}

/* 下拉选择器样式 */
.picker {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.picker-content {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.arrow {
  font-size: 24rpx;
  color: #999;
} 

.plan-name {
  font-size: 44rpx;
  font-weight: 400;
  justify-self: center;
  text-align: center;
}

/* 日期筛选相关样式 */
.filter-container {
  display: flex;
  align-items: center;
}

.date-filter {
  border-radius: 8rpx;
  padding: 4rpx 12rpx;
}

.filter-content {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.filter-icon {
  margin-left: 8rpx;
  font-size: 24rpx;
}

.clear-filter {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
  font-size: 28rpx;
  color: #999;
  background-color: #f0f0f0;
  border-radius: 50%;
}

.no-records {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}

.clear-filter-btn {
  margin-top: 20rpx;
  padding: 10rpx 20rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #666;
}

/* 详情卡片弹窗样式 */
.detail-card-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  padding: 32rpx 0;
}

.detail-card {
  width: 80%;
  max-width: 660rpx;
  background: linear-gradient(to bottom, #f8fafc, #e2e8f0);
  border-radius: 24rpx;
  box-shadow: 0 25rpx 50rpx -12rpx rgba(0, 0, 0, 0.25);
  overflow: hidden;
  position: relative;
  display: flex;
  flex-direction: column;
  max-height: 80vh;
  top: 50rpx;
}

.detail-card-header {
  height: 280rpx;
  background: linear-gradient(to bottom, #10b981, #059669, #047857);
  padding: 40rpx;
  position: relative;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-bottom: none;
}

.mountain-bg {
  position: absolute;
  inset: 0;
  top: 40rpx;
  left: 40rpx;
  opacity: 0.3;
}
.mountain-bg image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.header-content {
  display: flex;
  flex-direction: column;
  position: relative;
  z-index: 1;
}

.header-subtitle {
  font-size: 24rpx;
  color: #a7f3d0;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 2rpx;
  margin-bottom: 8rpx;
}

.detail-card-title {
  font-size: 48rpx;
  color: white;
  font-weight: bold;
  word-break: break-word;
  padding: 0 10rpx;
}

.achievement-badge {
  background: #10b981;
  width: 60%;
  display: flex;
  color: #047857;
  height: 66rpx;
  text-align: center;
  align-items: center;
  justify-content: center;
  align-self: center;
  justify-self: center;
  font-weight: bold;
  padding: 16rpx 64rpx;
  border-radius: 999rpx;
  font-size: 32rpx;
  margin-top: -48rpx;
  margin-bottom: 32rpx;
  border: 4rpx solid white;
  box-shadow: 0 4rpx 6rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 2;
}

.achievement-badge text {
  color: white;
}

.detail-card-content {
  padding: 48rpx;
  padding-top: 32rpx;
  overflow-y: auto;
  flex: 1;
}

.details-grid {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.detail-item {
  margin-bottom: 0;
  padding-left: 0;
  display: flex;
  flex-direction: column;
}

.detail-item-full {
  grid-column: 1 / -1;
}

.detail-label {
  font-size: 24rpx;
  color: #64748b;
  margin-bottom: 4rpx;
  display: flex;
  align-items: center;
  font-weight: normal;
}

.label-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 12rpx;
  opacity: 0.8;
}

.detail-value {
  font-size: 28rpx;
  color: #1e293b;
  font-weight: 500;
  word-break: break-word;
}

.detail-card-footer {
  background: #047857;
  padding: 24rpx;
  text-align: center;
  margin-top: auto;
}

.footer-text {
  font-size: 24rpx;
  color: #a7f3d0;
}

.save-card-btn {
  background: #10b981;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 16rpx 0;
  font-size: 28rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.save-card-btn:active {
  background: #059669;
}

.save-card-btn image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

.record-card {
  margin-bottom: 20rpx;
  background-color: rgba(239, 246, 255, 0.6);
  border-radius: 12rpx;
  padding: 0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.card-header {
  padding: 10rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-actions {
  display: flex;
  flex-direction: row;
  gap: 16rpx;
  justify-content: center;
  align-items: center;
}

.icon-view, .icon-delete {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
}

.svg-icon {
  padding-right: 8rpx;
  width: 36rpx;
  height: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.svg-icon image {
  width: 100%;
  height: 100%;
}

.card-row {
  display: flex;
  margin-bottom: 12rpx;
  align-items: center;
}

.card-label {
  font-size: 28rpx;
  color: #666;
  min-width: 140rpx;
  display: flex;
  align-items: center;
}

.card-value {
  color: #333;
  flex: 1;
  font-size: 28rpx;
}

.card-feedback {
  margin-top: 16rpx;
  display: flex;
  flex-direction: column;
}

.card-feedback .card-label {
  margin-bottom: 8rpx;
}

.card-feedback .card-value {
  line-height: 1.5;
}

.form-item {
  padding: 10rpx 0;
}

.label-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 12rpx;
}

/* ** Start: Styles for Exercise List in Detail Card ** */
.detail-exercise-list {
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx; /* Space between list items */
}

.detail-exercise-item {
  display: flex;
  align-items: center; /* Vertically align items */
  font-size: 26rpx;
  color: #333;
}

/* Style for the dot */
.detail-exercise-item .list-dot {
  margin-right: 8rpx; /* Space after the dot */
  color: #666; /* Dot color */
  font-weight: bold;
  line-height: 1; /* Ensure dot aligns well */
  margin-right: 24rpx;
}

.detail-exercise-item .completion-icon {
  width: 32rpx;
  height: 32rpx;
  flex-shrink: 0; /* Prevent icon from shrinking */
}

.detail-exercise-item .exercise-text {
  flex: 1;
  word-break: break-word;
}
/* ** End: Styles for Exercise List ** */



