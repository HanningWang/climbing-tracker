/* pages/training/training.wxss */
.training-container {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #fff;
}

.header {
  display: flex;
  flex-direction: column;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 400;
  margin-bottom: 10rpx;
  padding-left: 10rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #666;
  padding-left: 10rpx;
}

/* 选项卡样式 */
.tabs {
  display: flex;
  border-bottom: 1rpx solid #e0e0e0;
  margin-bottom: 30rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #22C55E;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 25%;
  width: 50%;
  height: 4rpx;
  background-color: #22C55E;
  border-radius: 2rpx;
}

.tab-content {
  flex: 1;
}

/* 表单样式 */
.form-container {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.form-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 30rpx;
  text-align: center;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.exercise-input-container {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.exercise-input {
  flex: 1;
}

.add-btn, .copy-btn {
  width: 80rpx;
  height: 80rpx;
  background-color: #22C55E;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 40rpx;
  font-weight: bold;
}

.copy-btn {
  background-color: #3b82f6;
}

/* 已添加的训练项目列表 */
.exercises-list {
  margin-bottom: 30rpx;
}

.exercise-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 20rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
  font-size: 28rpx;
}

.exercise-actions {
  display: flex;
  align-items: center;
}

.edit-exercise {
  padding: 0 10rpx;
  display: flex;
  align-items: center;
}

.edit-text {
  font-size: 32rpx;
  color: #4CAF50;
  font-weight: bold;
}

.delete-exercise {
  color: #ff4d4f;
  font-size: 32rpx;
  font-weight: bold;
  padding: 0 10rpx;
}

.svg-icon {
  width: 36rpx;
  height: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 复选框样式 */
.checkbox-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.checkbox-label {
  font-size: 28rpx;
}

.submit-btn {
  background-color: rgba(34, 197, 94, 1);
  color: white;
  border: none;
  border-radius: 8rpx;
  height: 72rpx;
  min-width: 100%;
  font-size: 32rpx;
  text-align: center;
  align-items: center;
  justify-content: center;
}

/* 训练计划列表样式 */
.plans-list {
  margin-top: 20rpx;
}

.list-header {
  font-size: 36rpx;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.plan-card {
  margin-bottom: 20rpx;
  background-color: rgb(239,246,255, 0.6);
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: 500;
}

.card-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.card-row {
  display: flex;
  align-items: center;
}

.card-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
  min-width: 80rpx;
}

.card-value {
  font-size: 28rpx;
  color: #333;
}

.card-actions {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  text-align: center;
  padding: 15rpx 0;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.view-btn {
  background-color: #f0f9f0;
  color: #22C55E;
}

.delete-btn {
  background-color: #fff1f0;
  color: #ff4d4f;
}

.execute-btn {
  background-color: #22C55E;
  color: white;
}

/* 执行训练页面样式 */
.execute-container {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.empty-text {
  text-align: center;
  color: #999;
  margin-top: 100rpx;
  font-size: 28rpx;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  background-color: white;
  border-radius: 12rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 500;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
}

.modal-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.detail-item {
  margin-bottom: 20rpx;
}

.detail-label {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
  display: block;
}

.detail-value {
  font-size: 28rpx;
  color: #333;
}

.detail-exercises {
  margin-top: 10rpx;
}

.detail-exercise {
  padding: 10rpx 0;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-exercise:last-child {
  border-bottom: none;
}

.modal-footer {
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #e0e0e0;
  display: flex;
  justify-content: flex-end;
}

.modal-btn {
  background-color: #22C55E;
  color: white;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 8rpx;
  margin-left: 20rpx;
}

/* 编辑弹窗的取消按钮样式 */
.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
  margin-right: 20rpx;
}

/* 修改图标样式 */
.icon-image {
  width: 36rpx;
  height: 36rpx;
}

.edit-icon {
  font-size: 32rpx;
  color: #4CAF50;
}

.icon-container {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 40rpx;
}

.edit-text {
  font-size: 32rpx;
  color: #4CAF50;
}

/* 计时器样式 */
.timer-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 30rpx 0;
}

.timer {
  font-size: 60rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  font-family: monospace;
}

.timer-actions {
  display: flex;
  gap: 20rpx;
}

.timer-btn {
  padding: 10rpx 30rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  min-width: 160rpx;
}

.start-btn {
  background-color: #22C55E;
  color: white;
}

.pause-btn {
  background-color: #f59e0b;
  color: white;
}

.reset-btn {
  background-color: #f5f5f5;
  color: #666;
}

/* 训练内容样式 */
.training-content {
  margin: 30rpx 0;
}

.content-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  display: block;
}

.exercise-checklist {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.exercise-check-item {
  display: flex;
  align-items: center;
  gap: 15rpx;
  padding: 10rpx 0;
}

.exercise-name {
  font-size: 28rpx;
}

.exercise-name.completed {
  text-decoration: line-through;
  color: #999;
}

/* 文本域样式 */
.textarea {
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

/* 训练记录样式 */
.training-records {
  margin-top: 40rpx;
}

.date-picker {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.date-picker-content {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 24rpx;
  color: #666;
}

.calendar-icon {
  font-size: 28rpx;
}

.search-btn {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  border-radius: 50%;
}

.search-icon {
  font-size: 28rpx;
}

.record-card {
  margin-bottom: 20rpx;
  background-color: rgb(239,246,255, 0.6);
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.card-date {
  font-size: 24rpx;
  color: #666;
}

.card-feedback {
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
}

.card-feedback .card-label {
  margin-bottom: 5rpx;
}

/* 下拉选择器样式 */
.picker {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.picker-content {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.arrow {
  font-size: 24rpx;
  color: #999;
} 